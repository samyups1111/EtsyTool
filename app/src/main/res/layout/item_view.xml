<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_rowSpan="3"
    android:layout_columnSpan="1"
    android:layout_gravity="center"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/pic_imageview"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_row="1"
        android:layout_column="1"
        android:src="@drawable/ic_face"
        android:contentDescription="item sold" />

    <TextView
        android:id="@+id/shop_name_textview"
        android:layout_width="wrap_content"
        android:layout_row="2"
        android:layout_column="1"
        android:layout_height="wrap_content"
        android:text="No Name"
        />

    <TextView
        android:id="@+id/url_textview"
        android:layout_width="wrap_content"
        android:layout_row="3"
        android:layout_column="1"
        android:layout_height="wrap_content"
        android:text="No URL Found"/>

    <TextView
        android:id="@+id/announcement_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="4"
        android:layout_column="1"
        android:text="No announcement"/>




</GridLayout>